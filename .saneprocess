# SaneProcess compliance manifest
name: SaneBar
type: macos_app
scheme: SaneBar
project: SaneBar.xcodeproj
bundle_id: com.sanebar.app

build:
  xcodegen: true

release:
  team_id: M78L6FXD48
  signing_identity: "Developer ID Application"
  dist_host: dist.sanebar.com
  site_host: sanebar.com
  r2_bucket: sanebar-downloads
  use_sparkle: true
  min_system_version: "15.0"
  dmg:
    volume_icon: Resources/DMGIcon.icns
    file_icon: Resources/DMGIcon.icns
    window_size: "800 400"
    app_icon_pos: "200 185"
    drop_pos: "600 185"

commands:
  verify: ./scripts/SaneMaster.rb verify
  test_mode: ./scripts/SaneMaster.rb tm
  lint: ./scripts/SaneMaster.rb lint
  clean: ./scripts/SaneMaster.rb clean
  launch: ./scripts/SaneMaster.rb launch
  logs: ./scripts/SaneMaster.rb logs

docs:
  - CLAUDE.md
  - README.md
  - DEVELOPMENT.md
  - ARCHITECTURE.md
  - SESSION_HANDOFF.md

mcps:
  - apple-docs
  - context7
  - github
  - XcodeBuildMCP
  - macos-automator

website: true
website_domain: sanebar.com

appstore:
  enabled: true
  # Create/register SaneBar in App Store Connect, then set its numeric app_id.
  app_id: "6759464256"
  configuration: Release
  platforms: [macos]
  category: public.app-category.utilities
  age_rating: "4+"
  privacy_policy_url: "https://sanebar.com/privacy"
  support_url: "https://sanebar.com/support"
  review_notes: "SaneBar manages menu bar icon visibility and positioning. The feature uses Accessibility APIs (AXIsProcessTrusted, AXUIElement) and CGEvent-based interactions to inspect and move status items exactly where users place them. The app also supports optional AppleScript automation for user-triggered workflows. These capabilities cannot work without Accessibility/automation permissions because macOS does not provide a lower-privilege API to read or reposition third-party menu bar items."
  screenshots:
    macos: marketing/appstore-images/*.png
  contact:
    name: "Stephan Joseph"
    phone: "+17277589785"
    email: "hi@saneapps.com"
